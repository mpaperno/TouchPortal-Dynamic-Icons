{
    "sdk": 3,
    "version": 1000,
    "TPDiscord_Version": "1.0.0",
    "name": "Touch Portal Dynamic Icons",
    "id": "Touch Portal Dynamic Icons",
    "plugin_start_cmd_mac":"sh \"%TP_PLUGIN_FOLDER%\"TPDynamicIcons/start.sh touchportal-dynamic-icons",
    "plugin_start_cmd_windows": "\"%TP_PLUGIN_FOLDER%TPDynamicIcons\\touchportal-dynamic-icons.exe\"",
    "configuration": {
        "colorDark": "#23272A",
        "colorLight": "#7289DA"
    },
    "settings": [
    ],
    "categories": [
        {
            "id": "TP Dynamic Icons",
            "name": "Dynamic Icons",
            "imagepath": "%TP_PLUGIN_FOLDER%TPDynamicIcons/tp-dynamic-icons.png",
            "actions": [
                 {  "id": "generate_gauge_icon",
                    "prefix": "Dynamic Icons:",
                    "name":"Gauge Icon",
                    "type":"communicate",
                    "tryInline":"true",
                    "format":"Dynamic Icons: Create a {$dynamic_icons_gauge_type$} icon with name {$dynamic_icons_gauge_name$} with shadow {$dynamic_icons_gauge_shadow$} and color {$dynamic_icons_gauge_shadow_color$} using color {$dynamic_icons_gauge_color$} with highlight {$dynamic_icons_gauge_highlight$} starting at degree {$dynamic_icons_gauge_start_degree$} at value {$dynamics_icon_gauge_value$} wiht cap style {$dynamics_icon_gauge_cap$} with background color {$dynamic_icons_gauge_background_color$} .",
                    "hasHoldFunctionality": true,
                    "data" :[
                        {
                            "id":"dynamic_icons_gauge_type",
                            "type": "choice",
                            "label":  "Gauge Type",
                            "default": "Regular",
                            "valueChoices":[
                                "Regular",
                                "Gradient"
                            ]
                        },
                        {
                            "id":"dynamic_icons_gauge_name",
                            "type": "text",
                            "label":  "Gauge Name",
                            "default": ""
                        },
                        {
                            "id":"dynamic_icons_gauge_shadow",
                            "type":"choice",
                            "label":"Gauge Shadow",
                            "default":"On",
                            "valueChoices":[
                                "On",
                                "Off"
                            ]
                        },
                        {
                            "id":"dynamic_icons_gauge_shadow_color",
                            "type": "color",
                            "label":  "Gauge Shadow Color",
                            "default": "#282828FF"
                        },
                        {
                            "id":"dynamic_icons_gauge_color",
                            "type": "color",
                            "label":  "Gauge Color",
                            "default": "#FFA500FF"
                        },
                        {
                            "id":"dynamic_icons_gauge_highlight",
                            "type":"choice",
                            "label":"Gauge Highlight",
                            "default":"On",
                            "valueChoices":[
                                "On",
                                "Off"
                            ]
                        },
                        {
                            "id":"dynamic_icons_gauge_start_degree",
                            "type": "number",
                            "label":  "Gauge Start Degree",
                            "default": "180",
                            "allowDecimals":"true",
                            "minValue":"0",
                            "maxValue":"360"
                        
                        },
                        {
                            "id":"dynamics_icon_gauge_value",
                            "type": "text",
                            "label":  "Gauge Value",
                            "default": "0",
                            "allowDecimals":"true",
                            "minValue":"0",
                            "maxValue":"100"
                        
                        },
                        {
                            "id":"dynamics_icon_gauge_cap",
                            "type":"choice",
                            "label":"Gauge Icon Cap Type",
                            "default":"round",
                            "valueChoices":[
                                "butt", 
                                "round",
                                "square"
                            ]
                        },
                        {
                            "id":"dynamic_icons_gauge_background_color",
                            "type": "color",
                            "label":  "Gauge Background Color",
                            "default": "#000000FF"
                        }
                    ]
                 }
            ],
            "states": [
            ],
            "events": []
        }
    ]
}